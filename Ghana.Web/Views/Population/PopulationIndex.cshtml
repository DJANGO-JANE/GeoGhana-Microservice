@model IEnumerable<Ghana.Web.Models.PopulationLiteDTO>

<br />
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Population Data</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-action="PopulationAdd" class="btn btn-outline-primary"><i class="fas fa-plus"></i> Add New Record</a>
		</div>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>
					Division Code
				</th>
				<th>
					Name
				</th>
				<th>
					Total
				</th>
				<th>

				</th>
			</tr>
		</thead>
        <tbody>
            @foreach (var item in Model)
            {
        <tr>
            <td>
                @item.DivisionCode
            </td>
            <td>
                @item.Location
            </td>
            <td>
                @((item.Total))
            </td>
            <td>
                <a asp-action="ProductEdit" class="btn btn-success" asp-route-productId="@item.DivisionCode">
                    <i class="fas fa-edit"></i>
                </a>
                <a asp-action="ProductDelete" class="btn btn-danger" asp-route-productId="@item.DivisionCode">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>}
        </tbody>
 </table>
</div>